{
  "name": "contracts",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test_plain": "npm run flat && truffle test",
    "test_plain:watch": "nodemon --ext js,sol -i plain.sol --exec npm run test_plain",

    "test": "truffle test",
    "test:watch": "nodemon --ext js,sol -i plain.sol --exec npm run test",
    "size": "truffle run contract-size",
    "test:aibe": "truffle test --network aibe",

    "_make_flat": "npx truffle-flattener ./contracts-src/apps/ReferalApp.sol > ./contracts/plain.sol",
    "_clean_flat": "node ./utils/clean-flat.js",
    "flat": "npm run _make_flat && npm run _clean_flat"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/test-helpers": "^0.5.16",
    "@truffle/hdwallet-provider": "^2.1.14",
    "dotenv": "^16.3.1",
    "truffle-privatekey-provider": "^1.5.0"
  },
  "devDependencies": {
    "truffle-plugin-verify": "^0.6.5"
  }
}
